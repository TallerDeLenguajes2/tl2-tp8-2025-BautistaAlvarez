@using tl2_tp8_2025_BautistaAlvarez.ViewModels
@model List<ProductoViewModel>
@{
    ViewData["Title"] = "Home Page";
}

<h2>Product List</h2>

<table class="table table-dark">
    <thead>
        <tr>
            <th hidden>ID</th>
            <th>Descripcion</th>
            <th>Precio</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var producto in Model)
        {
            <tr>
                <td hidden>@producto.IdProducto</td>
                <td>@producto.Descripcion</td>
                <td>@producto.Precio</td>
                <td>
                    <a asp-controller="Productos" asp-action="Details" asp-route-idProducto="@producto.IdProducto">Detalle</a>
                    <a asp-controller="Productos" asp-action="Edit" asp-route-idProducto="@producto.IdProducto">Editar</a><!--Ojo con el asp-route"xxx"= el xxx debe coincidir con el nombre del parametro que espera en el controller al mandar, recorda que route es una ruta-->
                    <a asp-controller="Productos" asp-action="Delete" asp-route-idProducto="@producto.IdProducto" onclick="return confirm('Â¿Estas seguro que quieres eliminar el elemento?')">Eliminar</a>                      
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-controller="Productos" asp-action="Create" class="btn btn-warning">Crear nuevo Presupuesto</a>